<!-- Sign Up Modal -->
<div class="modal fade" id="signup" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <form class="signup-form">
          <div class="d-flex flex-row justify-content-between">
            <h1 class="d-inline h3 mb-3 fw-normal">Sign Up</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="form-floating mb-3">
            <input type="type" class="form-control username-signup" id="username-signup"
              placeholder="Please enter a Username" />
            <label for="username-signup">Username</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control password-signup" id="password-signup"
              placeholder="Please enter a Password (min: 8 characters)" />
            <label for="password-signup">Password</label>
          </div>

          <button class="w-100 btn btn-lg btn-primary mb-3 signup-form" type="submit">Sign Up</button>

          <a href="" data-bs-toggle="modal" data-bs-target="#login">Already a member? Click here to log in!</a>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Log In Modal -->
<div class="modal fade" id="login" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
