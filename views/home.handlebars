            <input type="type" class="form-control" id="username-login" placeholder="Username" />
            <label for="username">Username</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password-login" placeholder="Password" />
            <label for="password-login">Password</label>
          </div>

          <button class="w-100 btn btn-lg btn-primary mb-3 login-form" type="submit">Log In</button>

          <a href="" data-bs-toggle="modal" data-bs-target="#signup">Need an account? Click here to sign up!</a>
        </form>
      </div>
    </div>
  </div>
</div>

