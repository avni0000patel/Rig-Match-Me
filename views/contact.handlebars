<div class="container">
    <h1 class="brand"><span>Red Turtles</span>Contact Page</h1>
    <div class="wrapper">
        <div class="company-info">
            <h3>Red Turtles Contact Page</h3>
            <ul>
                <li>avni0000patel@gmail.com</li>
            </ul>
        </div>
        <div class=="contact">
            <h3>Email Us</h3>
            {{msg}}
            <form method="POST" action="send">
                <p>
                    <label>Name</label>
                    <input type="text" name="name">
                </p>
                <p>
                    <label>Email Address</label>
                    <input type="email" name="email">
                </p>
                <p class="full">
                    <label>Message</label>
                    <textarea name="message" rows="5"></textarea>
                </p>
                <p class="full">
                    <button type="submit">Submit</button>
                </p>
            </form>
        </div>
    </div>
</div>