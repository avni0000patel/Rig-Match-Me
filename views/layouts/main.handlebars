<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rig Match Me</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="icon" href="/images/favicon.ico" />
  </head>

  <body>
    <div>
      <header class="p-0">

        {{! JUMBOTRON START }}
        <div class="bg-light">
          <div
            class="container-fluid d-flex justify-content-center flex-column p-0"
          >
            <div class="d-flex justify-content-center">
              <div>
                <img
                  src="/images/bg1.png"
                  class="vw-100 h-auto p-0"
                  alt="Spackled wall texture with vector drawings of a saxophone, drum kit, electric guitar, a pair of maracas and the Rig Match Me logo in the center"
                />
              </div>
            </div>

          </div>
        </div>
        {{! JUMBOTRON END }}

        {{! NAVBAR START }}
        <nav class="navbar navbar-expand-lg bg-dark">
          <div class="container-fluid">
            <div
              class="collapse navbar-collapse d-flex justify-content-center"
              id="navbarNav"
            >
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a
                    class="nav-link active text-light"
                    aria-current="page"
                    href="/"
                  ><h4>Home</h4></a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link active text-light"
                    aria-current="page"
                    href="/"
                  ><h4>About Us</h4></a>
                </li>
                {{#if logged_in}}
                  <li class="nav-item">
                    <a
                      class="nav-link text-light"
                      href="/new_rig"
                      id="newRig"
                    ><h4>Build a New Rig</h4></a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link text-light"
                      href="/new_rig"
                      id="newRig"
                    ><h4>View My Rigs</h4></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-light" href="/" id="logout"><h4>Log
                        Out</h4></a>
                  </li>
                {{else}}
                  <li class="nav-item">
                    <a class="nav-link text-light" href="/login"><h4>Log In</h4></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-light" href="/signup"><h4>Sign Up</h4></a>
                  </li>
                {{/if}}
              </ul>
            </div>
          </div>
        </nav>
        {{! NAVBAR END}}

      </header>
      <main>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/public/js/logout.js"></script>
    {{/if}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>

</html>